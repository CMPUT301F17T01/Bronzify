<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ContentDescription"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/rowFollow">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="followReqName"
        android:layout_marginStart="32dp"
        android:id="@+id/followReqName"/>

    <ImageButton
        android:id="@+id/acceptFollow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/followReqName"
        android:layout_marginStart="16dp"
        android:layout_toStartOf="@id/rejectFollow"
        android:background="@drawable/ic_check_black_24dp" />

    <ImageButton
        android:id="@+id/rejectFollow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/followReqName"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/ic_clear_black_24dp" />
</RelativeLayout>