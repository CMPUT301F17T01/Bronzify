<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/rowFollow">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="followReqName"
        android:layout_marginLeft="32dp"
        android:id="@+id/followReqName"/>

    <ImageButton
        android:id="@+id/acceptFollow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/followReqName"
        android:layout_marginLeft="16dp"
        android:layout_toLeftOf="@id/rejectFollow"
        android:background="@drawable/ic_check_black_24dp" />

    <ImageButton
        android:id="@+id/rejectFollow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/followReqName"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/ic_clear_black_24dp" />
</RelativeLayout>