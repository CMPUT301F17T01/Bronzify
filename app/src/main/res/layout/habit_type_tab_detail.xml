<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/linearLayout">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/labelHabitName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Habit Name:" />

        <EditText
            android:id="@+id/textHabitName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:enabled="false"
            android:inputType="textPersonName"
            android:maxLength="20" />

        <TextView
            android:id="@+id/labelHabitReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reason:" />

        <EditText
            android:id="@+id/textHabitReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:enabled="false"
            android:inputType="textPersonName"
            android:maxLength="30" />

        <TextView
            android:id="@+id/labelHabitStartDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Starting Date:" />

        <Button
            android:id="@+id/buttonSelectDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="Select a Date" />

        <TextView
            android:id="@+id/labelDayOfWeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Repeat:" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonSunday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/lighterAmber"
                android:enabled="false"
                android:text="SUN"
                android:textSize="10sp" />

            <Button
                android:id="@+id/buttonMonday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/lighterAmber"
                android:enabled="false"
                android:text="MON"
                android:textSize="10sp" />

            <Button
                android:id="@+id/buttonTuesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/lighterAmber"
                android:enabled="false"
                android:text="TUES"
                android:textSize="10sp" />

            <Button
                android:id="@+id/buttonWednesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/lighterAmber"
                android:enabled="false"
                android:text="WED"
                android:textSize="10sp" />

            <Button
                android:id="@+id/buttonThursday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/lighterAmber"
                android:enabled="false"
                android:text="THUR"
                android:textSize="10sp" />

            <Button
                android:id="@+id/buttonFriday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/lighterAmber"
                android:enabled="false"
                android:text="FRI"
                android:textSize="10sp" />

            <Button
                android:id="@+id/buttonSaturday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/lighterAmber"
                android:enabled="false"
                android:text="SAT"
                android:textSize="10sp" />

        </LinearLayout><![CDATA[

        "
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">







        ]]>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="true"
                android:text="Edit"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="477dp" />

            <Button
                android:id="@+id/buttonUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false"
                android:text="Update"
                tools:layout_editor_absoluteX="131dp"
                tools:layout_editor_absoluteY="595dp" />

            <Button
                android:id="@+id/buttonDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false"
                android:text="Delete"
                tools:layout_editor_absoluteX="285dp"
                tools:layout_editor_absoluteY="595dp" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>